@model GestionLigasDeportivas.Models.Estadistica

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Estadistica</h1>

<h4>Estadistica</h4>
<hr />
<div class="row">

    <form method="get">
        <div class="form-group">
            <label class="control-label">Filtrar por equipo:</label>
            <select name="equipoId" class="form-control" onchange="this.form.submit()">
                <option value="">-- Seleccione un equipo --</option>
                @foreach (var item in (SelectList)ViewData["EquipoId"])
                {
                    <option value="@item.Value" selected="@(item.Value == Context.Request.Query["equipoId"].ToString())">@item.Text</option>
                }
            </select>
        </div>
    </form>

    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EstadisticaId" />

            <!-- Esconder -->
            <input type="hidden" asp-for="EquipoId" value="@Context.Request.Query["equipoId"]" />


            <div class="form-group">
                <label asp-for="JugadorId" class="control-label"></label>
                <select asp-for="JugadorId" class="form-control" asp-items="ViewBag.JugadorId"></select>
                <span asp-validation-for="JugadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventoId" class="control-label"></label>
                <select asp-for="EventoId" class="form-control" asp-items="ViewBag.EventoId"></select>
                <span asp-validation-for="EventoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goles" class="control-label"></label>
                <input asp-for="Goles" class="form-control" />
                <span asp-validation-for="Goles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asistencias" class="control-label"></label>
                <input asp-for="Asistencias" class="form-control" />
                <span asp-validation-for="Asistencias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TarjetasRojas" class="control-label"></label>
                <input asp-for="TarjetasRojas" class="form-control" />
                <span asp-validation-for="TarjetasRojas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TarjetasAmarillas" class="control-label"></label>
                <input asp-for="TarjetasAmarillas" class="form-control" />
                <span asp-validation-for="TarjetasAmarillas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
