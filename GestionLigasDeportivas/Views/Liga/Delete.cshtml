@model GestionLigasDeportivas.Models.Liga

@{
    ViewData["Title"] = "Eliminar Liga";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Liga</h1>

<h3>¿"Estas seguro de eliminar esta Liga"?</h3>
<div>
    <h4>Liga</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroJornadas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroJornadas)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LigaId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
