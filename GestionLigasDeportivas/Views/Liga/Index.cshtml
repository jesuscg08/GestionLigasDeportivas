@model IEnumerable<GestionLigasDeportivas.Models.Liga>

@{
    ViewData["Title"] = "Liga";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Ligas</h1>

<p>
    <a asp-action="Registro">Crear nueva liga</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroJornadas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroJornadas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LigaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.LigaId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.LigaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
